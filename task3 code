import nltk
from nltk.chat.util import Chat, reflections

nltk.download('punkt')

pairs = [
    (r"hi|hello|hey", ["Hello!", "Hi there!", "Hey! How can I help you today?"]),
    (r"what is your name?", ["I'm a chatbot created to help you!"]),
    (r"how are you?", ["I'm doing great, thanks for asking!", "I'm just a bot, but I'm functioning well!"]),
    (r"what can you do?", ["I can answer your questions and have basic conversations."]),
    (r"bye|goodbye", ["Goodbye! Have a nice day!", "Bye! Take care!"]),
    (r"my name is (.*)", ["Hello %1, nice to meet you!"]),
    (r"(.*) your (.*)", ["Sorry, I didn't understand that. Can you clarify?"]),
    (r"(.*)", ["Sorry, I don't have an answer for that. Could you ask something else?"])
]

chatbot = Chat(pairs, reflections)

def start_chat():
    print("Chatbot: Hi! I'm your chatbot. Type 'bye' to exit.")
    while True:
        user_input = input("You: ")
        if user_input.lower() == "bye":
            print("Chatbot: Goodbye! Have a nice day!")
            break
        response = chatbot.respond(user_input)
        print(f"Chatbot: {response}")

if __name__ == "__main__":
    start_chat()
